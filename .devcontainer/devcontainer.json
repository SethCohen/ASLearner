{
    "name": "flutter_docker",
    "context": "..",
    "dockerFile": "../Dockerfile",
    "remoteUser": "developer",
    "mounts": ["source=/dev/bus/usb,target=/dev/bus/usb,type=bind"],
    "runArgs": ["--privileged"],
    "customizations": {
        "vscode": {
            "extensions": ["dart-code.flutter"]
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder}/src,target=/home/developer/src,type=bind,consistency=delegated",
    "workspaceFolder": "/home/developer/src"
}
